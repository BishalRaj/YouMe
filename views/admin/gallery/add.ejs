
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><%= heading %></h1>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-8 mb-4 mx-auto">
            <%- include('../../partials/messages'); %>

            
            <div class="form-group">
                <div class="">
                    <div class="card-block">
                        <center class="m-t-30"> 
                            <img src="/assets/image/" id="display_selected_image" style="width: 100%; display: none" />
                            <!-- <h4 class="card-title m-t-10">Selected Image</h4> -->
                        </center>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label >Select Image</label>
                <label for="selected_image" class="form-control btn btn-info">Select Image</label>
                <input type="file" placeholder="Select Image"
                    id="selected_image" hidden/>
            </div>

            <form method="POST" action="/admin/gallery/add">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title">
                </div>

                <div class="form-group">
                    <label for="category">Category / Event</label>

                    

                    <select class="form-control" id="category" name="category">
                  
                        
                    <% data.forEach(function(d){ %>
                        <option
                        <% if(selected){ %>
                            <% if(selected==d._id){ %>
                            selected="<%= selected %>"
                            <% } %>
                        <% } %>                        
                        value="<%= d._id %>"><%= d.category %></option>
              
                        
                    <%  }); %>
                      </select>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="image" id="imageToUpload" hidden/>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
       
    </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<script>
    $("#nav-gallery").addClass("active");
  </script>
  