
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><%= heading %></h1>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-8 mb-4 mx-auto">
            <div class="form-group">
                <div class="">
                    <div class="card-block">
                        <center class="m-t-30"> 
                            <img src="/assets/image/" id="display_selected_image" style="width: 100%; display: none" />
                            <!-- <h4 class="card-title m-t-10">Selected Image</h4> -->
                        </center>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label >Select Image</label>
                <label for="selected_image" class="form-control btn btn-info">Select Image</label>
                <input type="file" placeholder="Select Image"
                    id="selected_image" hidden/>
            </div>

            <form method="POST" action="/admin/popup/add">
                <div class="form-group">
                    <label for="title">popup Title / Heading</label>
                    <input type="text" class="form-control" name="title">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="image" id="imageToUpload" hidden/>
                </div>

                <div class="form-group">
                    <label for="popupDescription">Description</label>
                    <textarea class="form-control" id="popupDescription" name="description" rows="4"></textarea>
                  </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-lg-4">
            <a href="/admin/gallery" class="btn btn-info w-75 m-3" >Select from Gallery</a>
            <a href="/admin/news" class="btn btn-info w-75 m-3" >Select from News</a>
            <a href="/admin/article" class="btn btn-info w-75 m-3" >Select from Article</a>
            <a href="/admin/event" class="btn btn-info w-75 m-3" >Select from Events</a>
            <a href="/admin/news" class="btn btn-success w-75 m-3" >Add Manually</a>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<script>
    $("#nav-popup").addClass("active");
  </script>
  