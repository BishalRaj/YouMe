<section class="admission-head">
  <div class="container p-0 m-0">
    <div class="row title-head">
      <div class="col-lg-10 align-self-end">
        <h1 class="header-font shadow-lg w-75 p-5">
          Student Article
        </h1>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container p-0 m-0 mx-auto">
    <div class="row py-5 mx-0">
      <% if(data==""){ %>
      <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center">
        <h5 class="text-muted mx-auto">
          No News to show!
        </h5>
      </div>
      <% } %> <% data.forEach((n)=>{ %>

      <div class="col-lg-6 col-md-6 col-sm-10 col-10 mx-auto p-4 my-2">
        <div class="row shadow-lg bg-light p-3">
          <div class="col-lg-6 d-flex overflow-hidden">
            <img
              src="/assets/image/o_<%= n.image %>"
              alt=""
              class="img-fluid img-cover"
            />
          </div>
          <div
            class="<% if(!n.image){ %> col-lg-12<% } %><% if(n.image){ %> col-lg-6<% } %>"
          >
            <h3><%= n.title %></h3>
            <small>Date: <%= n.addedOn %></small>
            <p class="text-muted" style="overflow: hidden; height: 75px;">
              <%= n.description %>
            </p>
            <a
              href="/article/<%= n._id %>"
              type="button"
              class="btn btn-outline-primary"
            >
              Read More >>
            </a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>
<script>
  $("#nav-news").addClass("active");
</script>
